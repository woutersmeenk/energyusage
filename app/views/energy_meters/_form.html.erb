<%= form_for @energy_meter, :html => { :class => "form-horizontal energy_meter" } do |f| %>

  <% if @energy_meter.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@energy_meter.errors.count, "error") %> prohibited this energy meter from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @energy_meter.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :start, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :start, :class => 'form-control' %>
    </div>
    <%=f.error_span(:start) %>
  </div>
  <div class="form-group">
    <%= f.label :end, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :end, :class => 'form-control' %>
    </div>
    <%=f.error_span(:end) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                energy_meters_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
