<%- model_class = EnergyUsage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:period_start) %>:</strong></dt>
  <dd><%= @energy_usage.period_start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @energy_usage.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:energy_meter_id) %>:</strong></dt>
  <dd><%= @energy_usage.energy_meter_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              energy_usages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_energy_usage_path(@energy_usage), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              energy_usage_path(@energy_usage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
